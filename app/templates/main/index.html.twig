{# templates/main/index.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Inicio - Sistema de Reportes</title>
    <style>
        /* Reset y base */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #E7E7E7;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 40px 20px;
            min-height: 100vh;
        }

        h1 {
            color: #B2225D;
            font-size: 32px;
            margin-bottom: 10px;
        }

        p {
            font-size: 18px;
            color: #555;
            margin-bottom: 30px;
        }

        .link-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
            width: 100%;
            max-width: 400px;
        }

        .report-link {
            text-decoration: none;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
            color: #fff;
            padding: 18px 25px;
            border-radius: 16px;
            background: rgba(178, 34, 93, 0.3); /* primary con transparencia */
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
            transition: all 0.3s ease-in-out;
        }

        .report-link:hover {
            transform: translateY(-4px) scale(1.02);
            background: rgba(192, 159, 101, 0.4); /* accent con transparencia */
        }

        .card {
            background: rgba(255, 255, 255, 0.35);
            border-radius: 24px;
            padding: 30px;
            max-width: 450px;
            width: 100%;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="card">
        <h1>Bienvenida, {{ app.user.name|default('Usuario') }}</h1>
        <p>Selecciona un reporte para continuar:</p>
        <div class="link-container">
            <a href="{{ path('app_circular_index') }}" class="report-link">Reporte de Circulares</a>
            <a href="{{ path('app_correspondence_index') }}" class="report-link">Reporte de Correspondencia</a>
            <a href="{{ path('app_oficio_index') }}" class="report-link">Reporte de Oficios</a>
        </div>
    </div>
</body>
</html>
