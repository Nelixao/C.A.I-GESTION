{% extends 'base.html.twig' %}

{% block title %}Circular{% endblock %}

{% block body %}
    <h1>Circular</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circular.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ circular.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ circular.content }}</td>
            </tr>
            <tr>
                <th>Target_group</th>
                <td>{{ circular.targetGroup }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ circular.date ? circular.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>File_path</th>
                <td>{{ circular.filePath }}</td>
            </tr>
            <tr>
                <th>Created_by</th>
                <td>{{ circular.createdBy }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ circular.createdAt ? circular.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ circular.updatedAt ? circular.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_circular_index') }}">back to list</a>

    <a href="{{ path('app_circular_edit', {'id': circular.id}) }}">edit</a>

    {{ include('circular/_delete_form.html.twig') }}
