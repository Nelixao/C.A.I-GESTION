{{ form_start(form, { attr: { class: 'form-glass' } }) }}
  <div class="row g-3">
    <div class="col-md-6">
      {{ form_row(form.subject) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.date) }}
    </div>

    <div class="col-md-6">
      {{ form_row(form.sender) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.receiver) }}
    </div>

    <div class="col-12">
      {{ form_row(form.body) }}
    </div>

    <div class="col-md-6">
      {{ form_row(form.file_path) }}
    </div>

    <div class="col-md-6">
      {{ form_row(form.user) }}
    </div>

    {# Solo si decidiste mantenerlos visibles #}
    <div class="col-md-6">
      {{ form_row(form.created_by) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.created_at) }}
    </div>
    <div class="col-md-6">
      {{ form_row(form.updated_at) }}
    </div>
  </div>

  <div class="form-actions mt-3">
    <button class="glass-btn primary" type="submit">
      <i class="bi bi-save"></i> {{ button_label|default('Guardar') }}
    </button>
  </div>
{{ form_end(form) }}
