{% extends 'base.html.twig' %}

{% block title %}Nuevo Escaneo{% endblock %}

{% block body %}
<div class="container-oficios">
  <h1 class="page-title">Subir Documento Escaneado</h1>
  {{ form_start(form, {'attr': {'enctype':'multipart/form-data'}}) }}
    <div class="form-group">{{ form_label(form.name) }}{{ form_widget(form.name) }}</div>
    <div class="form-group">{{ form_label(form.description) }}{{ form_widget(form.description) }}</div>
    <div class="form-group">{{ form_label(form.sourceType) }}{{ form_widget(form.sourceType) }}</div>
    <div class="form-group">{{ form_label(form.sourceId) }}{{ form_widget(form.sourceId) }}</div>
    <div class="form-group">{{ form_label(form.upload) }}{{ form_widget(form.upload) }}</div>
    <button class="create-btn" type="submit">Subir</button>
  {{ form_end(form) }}
</div>
{% endblock %}
