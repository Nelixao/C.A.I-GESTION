{% extends 'baselogin.html.twig' %}

{% block title %}Olvidé mi contraseña{% endblock %}

{% block body %}
<div class="login-container">
  <div class="login-card">
    <h1 class="login-title">Recuperar contraseña</h1>

    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="alert alert-{{ label }}">{{ message }}</div>
      {% endfor %}
    {% endfor %}

    <form method="post" action="{{ path('app_forgot_password') }}">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">
      <div class="form-group">
        <label for="email">Correo electrónico</label>
        <input type="email" id="email" name="email" required placeholder="correo@ejemplo.com">
      </div>
      <button class="login-submit" type="submit">Enviar instrucciones</button>
    </form>

    <div class="login-links">
      <a href="{{ path('app_login') }}">Volver a iniciar sesión</a>
    </div>
  </div>
</div>
{% endblock %}
